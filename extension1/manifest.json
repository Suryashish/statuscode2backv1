{
    "manifest_version": 3,
    "name": "HealthWise - Smart Food Analyzer",
    "version": "2.0",
    "description": "AI-powered food analysis for health-conscious individuals",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Analyze Food Product"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}